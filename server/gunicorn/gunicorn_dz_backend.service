[Unit]
Description=Gunicorn instance for dz_backend
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/dz_backend
ExecStart=/var/www/dz_backend/venv/bin/gunicorn \
          --workers 3 \
          --bind 0.0.0.0:8000 \
          dzavod.wsgi:application
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
